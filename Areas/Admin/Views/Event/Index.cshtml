@using GBC_TicketingSystem_2.Areas.Admin.Models
@model IEnumerable<Event>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="fw-bold text-primary mb-3">Manage Events</h2>

<div class="d-flex justify-content-between align-items-center mb-4">
    <p class="mb-0 text-muted">
        Total Events: @Model.Count()
    </p>

    <a class="btn btn-primary"
       asp-action="Create">
        Create Event
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info shadow-sm">
        There are no events yet. Click <strong>+ Create Event</strong> to add one.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body d-flex flex-column">

                        <h5 class="fw-bold mb-2">@item.Title</h5>

                        <p class="mb-1">
                            <strong>Date:</strong>
                            @item.EventDate.ToLocalTime().ToString("MMM dd, yyyy")
                        </p>

                        <p class="mb-1">
                            <strong>Category:</strong>
                            @item.Category?.Name
                        </p>

                        <p class="mb-3">
                            <strong>Tickets:</strong>
                            @item.TicketsAvailable
                        </p>

                        <div class="mt-auto d-flex gap-2">
                            <a class="btn btn-warning btn-sm"
                               asp-action="Edit"
                               asp-route-id="@item.EventId">
                                Edit
                            </a>

                            <a class="btn btn-danger btn-sm"
                               asp-action="Delete"
                               asp-route-id="@item.EventId"
                               onclick="return confirm('Are you sure you want to delete this event?');">
                                Delete
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
}
