@using GBC_TicketingSystem_2.Areas.Admin.Models
@model Event

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="fw-bold text-primary mb-4">Event Details</h2>

<div class="card shadow-sm border-0 mx-auto" style="max-width: 700px;">
    <div class="card-body">

        <h3 class="fw-bold mb-3">@Model.Title</h3>

        <p class="mb-2">
            <strong>Date:</strong>
            @Model.EventDate.ToLocalTime().ToString("MMM dd, yyyy")
        </p>

        <p class="mb-2">
            <strong>Category:</strong>
            @Model.Category?.Name
        </p>

        <p class="mb-2">
            <strong>Tickets Available:</strong>
            @Model.TicketsAvailable
        </p>

        <hr class="my-4" />

        <h5 class="fw-semibold mb-2">Description</h5>
        <p class="mb-0">
            @Model.Description
        </p>

    </div>
</div>

<div class="d-flex gap-2 mt-4">
    <a asp-action="Edit"
       asp-route-id="@Model.EventId"
       class="btn btn-warning px-4">
        Edit
    </a>

    <a asp-action="Index"
       class="btn btn-outline-secondary px-4">
        Back to List
    </a>
</div>