@model GBC_TicketingSystem_2.Areas.Admin.Models.Event

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="fw-bold text-danger mb-4">Delete Event</h2>

<div class="alert alert-warning shadow-sm border-0">
    <strong>Are you sure?</strong> This action cannot be undone.
</div>

<div class="card shadow-sm border-0 mx-auto" style="max-width: 700px;">
    <div class="card-body">

        <p class="mb-2"><strong>Title:</strong> @Model.Title</p>
        <p class="mb-2"><strong>Date:</strong> @Model.EventDate.ToLocalTime().ToString("MMM dd, yyyy")</p>
        <p class="mb-2"><strong>Category:</strong> @Model.Category?.Name</p>
        <p class="mb-0"><strong>Tickets Available:</strong> @Model.TicketsAvailable</p>

    </div>
</div>

<form asp-action="DeleteConfirmed"
      asp-route-id="@Model.EventId"
      method="post"
      class="d-flex gap-2 mt-4">

    <button type="submit" class="btn btn-danger px-4">
        Yes, Delete
    </button>

    <a asp-action="Index" class="btn btn-outline-secondary px-4">
        Cancel
    </a>
</form>