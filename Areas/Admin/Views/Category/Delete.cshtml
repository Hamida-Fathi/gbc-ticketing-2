@model GBC_TicketingSystem_2.Areas.Admin.Models.Category

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="fw-bold text-danger mb-4"> Delete Category</h2>

<div class="alert alert-warning shadow-sm border-0">
    <strong>Are you sure?</strong> This action cannot be undone.
</div>

<div class="card shadow-sm border-0 mx-auto" style="max-width: 600px;">
    <div class="card-body">

        <p class="mb-2"><strong>Category Name:</strong> @Model.Name</p>

    </div>
</div>

<form asp-area="Admin"
      asp-controller="Category"
      asp-action="DeleteConfirmed"
      asp-route-id="@Model.CategoryId"
      method="post"
      class="d-flex gap-2 mt-4">

    <button type="submit" class="btn btn-danger px-4">
        Yes, Delete
    </button>

    <a asp-area="Admin"
       asp-controller="Category"
       asp-action="Index"
       class="btn btn-outline-secondary px-4">
        Cancel
    </a>
</form>