@model IEnumerable<GBC_TicketingSystem_2.Models.Ticket>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    <h2 class="fw-bold text-primary mb-4">Tickets Sold</h2>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-primary">
        <tr>
            <th>Buyer</th>
            <th>Email</th>
            <th>Event</th>
            <th>Date</th>
            <th>Purchased On</th>
        </tr>
        </thead>

        <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.User?.UserName</td>
                <td>@ticket.User?.Email</td>
                <td>@ticket.Event?.Title</td>
                <td>@ticket.Event?.EventDate.ToString("MMM dd, yyyy")</td>
                <td>@ticket.PurchaseDate.ToLocalTime().ToString("MMM dd, yyyy - h:mm tt")</td>
            </tr>
        }
        </tbody>
    </table>

</div>