@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="fw-bold text-primary mb-4">📊 Admin Dashboard</h2>

<div class="row g-4 mb-5">

    <!-- Total Events -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 text-white" style="background-color: #0d6efd;">
            <div class="card-body">
                <h5 class="fw-semibold">Total Events</h5>
                <h2 class="fw-bold">@ViewBag.TotalEvents</h2>
            </div>
        </div>
    </div>

    <!-- Total Categories -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 text-white" style="background-color: #198754;">
            <div class="card-body">
                <h5 class="fw-semibold">Total Categories</h5>
                <h2 class="fw-bold">@ViewBag.TotalCategories</h2>
            </div>
        </div>
    </div>

    <!-- Tickets Sold -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 text-white" style="background-color: #ffc107;">
            <div class="card-body">
                <h5 class="fw-semibold">Tickets Sold</h5>
                <h2 class="fw-bold">@ViewBag.TotalTicketsSold</h2>
            </div>
        </div>
    </div>

</div>

<h3 class="fw-semibold mb-3">Upcoming Events</h3>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">

        <table class="table table-striped table-hover mb-0">
            <!-- Consistent header (light) -->
            <thead class="table-primary">
                <tr>
                    <th>Event</th>
                    <th>Date</th>
                    <th>Category</th>
                </tr>
            </thead>

            <tbody>
            @foreach (var evt in ViewBag.UpcomingEvents)
            {
                <tr>
                    <td class="fw-semibold">@evt.Title</td>
                    <td>@evt.EventDate.ToLocalTime().ToString("MMM dd, yyyy")</td>
                    <td>@evt.Category?.Name</td>
                </tr>
            }
            </tbody>
        </table>

    </div>
</div>
