@model IEnumerable<GBC_TicketingSystem_2.Areas.Admin.Models.Event>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="fw-bold text-primary mb-4">Browse Events</h2>

<div class="row">
    @foreach (var evt in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">

                    <h5 class="fw-bold">@evt.Title</h5>

                    <p class="text-muted">
                        @evt.Description.Substring(0, Math.Min(80, evt.Description.Length))...
                    </p>

                    <p><strong>Date:</strong> @evt.EventDate.ToShortDateString()</p>
                    <p><strong>Category:</strong> @evt.Category?.Name</p>

                    <a asp-action="Details" asp-route-id="@evt.EventId" class="btn btn-primary mt-auto">
                        View Details
                    </a>

                </div>
            </div>
        </div>
    }
</div>