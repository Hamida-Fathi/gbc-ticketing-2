@model IEnumerable<GBC_TicketingSystem_2.Models.Ticket>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    <h2 class="fw-bold text-primary mb-4">🎫 My Tickets</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm">
            You have not purchased any tickets yet.
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-body p-0">

                <table class="table table-hover table-striped mb-0">
                    <thead class="table-primary">
                    <tr>
                        <th>Event</th>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Purchased On</th>
                    </tr>
                    </thead>

                    <tbody>
                    @foreach (var ticket in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@ticket.Event.Title</td>

                            <td>
                                @ticket.Event.EventDate.ToLocalTime().ToString("MMM dd, yyyy")
                            </td>

                            <td>@ticket.Event.Category?.Name</td>

                            <td>
                                @ticket.PurchaseDate.ToLocalTime().ToString("MMM dd, yyyy - h:mm tt")
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>

            </div>
        </div>
    }

</div>