@model GBC_TicketingSystem_2.Areas.Admin.Models.Event

@{
    ViewData["Title"] = "Buy Ticket";
}

<h2 class="mb-3">Confirm Your Purchase</h2>

<div class="card shadow-sm p-4">

    <h4>@Model.Title</h4>
    <p>@Model.Description</p>

    <hr />

    <p><strong>Date:</strong> @Model.EventDate.ToShortDateString()</p>
    <p><strong>Category:</strong> @Model.Category.Name</p>
    <p><strong>Tickets Left:</strong> @Model.TicketsAvailable</p>

    <hr />

    <form method="post" asp-action="Confirm">
        <input type="hidden" name="id" value="@Model.EventId" />

        <button class="btn btn-success btn-lg" type="submit">
            Confirm Purchase
        </button>

        <a class="btn btn-secondary btn-lg" asp-area="Guest" asp-controller="Event" asp-action="Details" asp-route-id="@Model.EventId">
            Cancel
        </a>
    </form>
</div>