@using Microsoft.AspNetCore.Identity
@using GBC_TicketingSystem_2.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GBC Ticketing System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="bg-light">

    <!-- ================= NAVBAR ================= -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
            <div class="container">

                <!-- Brand Logo -->
                <a class="navbar-brand fw-bold"
                   asp-area=""
                   asp-controller="Home"
                   asp-action="Index">
                    🎟 GBC Ticketing System
                </a>

                <!-- Mobile toggle -->
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar links -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-area=""
                               asp-controller="Home"
                               asp-action="Index">
                                Home
                            </a>
                        </li>

                        <!-- Browse Events -->
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-area="Guest"
                               asp-controller="Event"
                               asp-action="Index">
                                Browse Events
                            </a>
                        </li>

                        <!-- My Tickets (ONLY for logged-in NON-ADMIN users) -->
                        @if (SignInManager.IsSignedIn(User) && !User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-area="Guest"
                                   asp-controller="Ticket"
                                   asp-action="MyTickets">
                                    My Tickets
                                </a>
                            </li>
                        }

                        <!-- Admin Panel -->
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle"
                                   href="#"
                                   id="adminDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown">
                                    Admin
                                </a>

                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">

                                    <li>
                                        <a class="dropdown-item"
                                           asp-area="Admin"
                                           asp-controller="Dashboard"
                                           asp-action="Index">
                                            Dashboard
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item"
                                           asp-area="Admin"
                                           asp-controller="Category"
                                           asp-action="Index">
                                            Manage Categories
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item"
                                           asp-area="Admin"
                                           asp-controller="Event"
                                           asp-action="Index">
                                            Manage Events
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item"
                                           asp-area="Admin"
                                           asp-controller="Ticket"
                                           asp-action="Index">
                                            Sold Tickets
                                        </a>
                                    </li>

                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- Login / Register / Logout -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- ================= GLOBAL ALERTS ================= -->
    <div class="container mt-4">

        @if (TempData["success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm">
                @TempData["success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm">
                @TempData["error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["info"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show shadow-sm">
                @TempData["info"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

    </div>

    <!-- Main body -->
    <main class="container mt-3 pb-4">
        @RenderBody()
    </main>

    <footer class="bg-white border-top mt-5 py-3">
        <div class="container text-center text-muted small">
            © 2025 — GBC Ticketing System. All Rights Reserved.
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
