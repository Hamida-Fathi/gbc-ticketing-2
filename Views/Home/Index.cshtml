@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">

    <!-- Hero Section -->
    <div class="text-center mb-5">
        <h1 class="fw-bold display-5 text-primary">Welcome to GBC Ticketing System </h1>
        <p class="lead text-muted">
            Discover exciting events, buy tickets instantly, and manage your bookings with ease.
        </p>

        <a asp-area="Guest" asp-controller="Event" asp-action="Index"
           class="btn btn-primary btn-lg px-4 mt-3">
            Browse Events
        </a>
    </div>


    <!-- About section -->
    <div class="row text-center mb-5">
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h4 class="fw-semibold">Discover Events</h4>
                    <p class="text-muted">Browse concerts, workshops, gatherings, and more happening soon.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h4 class="fw-semibold">Secure Ticket Purchase</h4>
                    <p class="text-muted">Buy your tickets instantly with a smooth, safe checkout experience.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h4 class="fw-semibold">Track Your Events</h4>
                    <p class="text-muted">View your upcoming events, past purchases, and ticket history.</p>
                </div>
            </div>
        </div>
    </div>


    <!-- Featured Events -->
    <h3 class="fw-bold mb-3">Featured Events</h3>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var evt in ViewBag.FeaturedEvents ?? new List<dynamic>())
        {
            <div class="col">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <h5 class="fw-bold">@evt.Title</h5>
                        <p class="text-muted">@evt.Description</p>

                        <p class="mb-1"><strong>Date:</strong> @evt.EventDate.ToString("MMM dd, yyyy")</p>
                        <p class="mb-3"><strong>Category:</strong> @evt.Category?.Name</p>

                        <a asp-area="Guest" asp-controller="Event" asp-action="Details" asp-route-id="@evt.EventId"
                           class="btn btn-outline-primary btn-sm">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
